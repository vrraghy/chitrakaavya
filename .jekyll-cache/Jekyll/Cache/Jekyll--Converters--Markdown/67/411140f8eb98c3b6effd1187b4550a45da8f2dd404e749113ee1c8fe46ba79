    function fnSymmQ2 (c) {
        for (i=1; i < 5; i++) {
            cols=x.rows[i].querySelectorAll('td');
            for (j=4; j < 8; j++) {
                cols[j].style.backgroundColor= c ? cols[7-j].style.backgroundColor : "";
            }
        }
    }
    function symm_ver (c) {
        for (i=5; i < 9; i++) {
            cols=x.rows[i].querySelectorAll('td');
            for (j=0; j < 8; j++) {
                cols[j].style.backgroundColor= c ? x.rows[9-i].querySelectorAll('td')[7-j].style.backgroundColor : "";
            }
        }
    }

    var s = document.getElementsByClassName("sarvathobhadra")[0].style,
        f = false;

    function fnSymmQ2_timer (f) {
        if(!f) {
            fnSymmQ2(true);
        }
        else{
            fnSymmQ2(false);
        }
        f = !f;
    }

    function symm_ver_timer (f) {
        if(!f) {
            symm_ver(true);
        }
        else{
            symm_ver(false);
        }
        f = !f;
    }

    function fnSymmQ3 (c) {
        for (i=5; i < 9; i++) {
